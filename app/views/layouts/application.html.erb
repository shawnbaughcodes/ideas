<!DOCTYPE html>
<html>
<head>
  <title>Ideas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css">
  <script type="text/javascript" src="~/ideas/app/assets/javascripts/users.js"></script>
</head>
<body>
    <% if current_user %>
    <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper black">
        <a href="#!" class="brand-logo hide-on-med-and-down">Ideas</a>
        <ul class="right">
          <li><a href="/sessions/<%=current_user.id%>" data-method="delete">Log Out</a></li>
          <li><a href="/ideas">All Ideas</a></li>
          <li><a href="/users/<%=current_user.id%>">My Ideas</a></li>
        </ul>
      </div>
    </nav>
  </div>
    <% end %>
<%= yield %>

</body>
</html>
