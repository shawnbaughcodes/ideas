<div class="row">
    <div class="content_container" background-image="app/assets/images/idea_header_bg.jpg">
        <h3>
            <a href="/users/<%=@idea.user.id %>"><%=@idea.user.name%></a> says:
        </h3>
        <p id="content">
            <%=@idea.content%>
        </p>
        <h4>People who have liked this idea:</h4>
        <%@count.each do |user|%>
            <p><a href="/users/<%=user.id%>"><%=user.name%></a></p>
        <%end%>
    </div>
</div>
